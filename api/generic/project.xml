<?xml version="1.0"?>
<project>
  <extend>${basedir}/../project.xml</extend>
  <name>Cargo Core Generic API</name>
  <artifactId>cargo-core-api-generic</artifactId>
  <package>org.codehaus.cargo.generic</package>
  <shortDescription>Core API to generically access the typed container API</shortDescription>
  <description>
    Core API to generically access the typed container API
  </description>
  <repository>
    <connection>scm:svn:svn://svn.cargo.codehaus.org/cargo/scm/cargo/trunk/core/api/generic</connection>
    <url>http://svn.cargo.codehaus.org/</url> 
  </repository>
 
  <packageGroups>
    <packageGroup>
      <title>Public API</title>
      <packages>org.codehaus.cargo.generic,org.codehaus.cargo.generic.configuration,org.codehaus.cargo.generic.deployable,org.codehaus.cargo.generic.deployer</packages>
    </packageGroup>
    <packageGroup>
      <title>Public SPI</title>
      <packages>org.codehaus.cargo.generic.spi</packages>
    </packageGroup>
    <packageGroup>
      <title>Internal API</title>
      <packages>org.codehaus.cargo.generic.internal.util</packages>
    </packageGroup>
  </packageGroups>

  <dependencies>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-container</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-module</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-util</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
    <!-- Note: We should normally put the version in the version tag but unfortunately this
         doesn't work because it would mean we would have 2 artifacts with the same groupId,
         artifactId and type... -->
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-container-${pom.currentVersion}</artifactId>
      <version>tests</version>
    </dependency>
  </dependencies>

</project>
