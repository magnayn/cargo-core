<project default="cargo:dist"
    xmlns:u="jelly:util"
    xmlns:ant="jelly:ant"
  	xmlns:j="jelly:core"
    xmlns:artifact="artifact">

  <goal name="cargo:dist" prereqs="java:compile,checkstyle,jar:install">
    <!-- We need to create a test jar containing reusable tests.
         Is there a better way to do this in m1? This already exists in m2 (it's called
         the "attached test" feature -->
    <ant:jar jarfile="${maven.build.dir}/${maven.final.name}-tests.jar" basedir="${maven.test.dest}"
        includes="**/VFSFileHandler.class,**/AbstractResourceTest.class"/>
    <ant:copy todir="${maven.repo.local}/${pom.groupId}/jars"
        file="${maven.build.dir}/${maven.final.name}-tests.jar"/>
  </goal>

  <goal name="cargo:clover" prereqs="clover:on,dist"/>

</project>
