<?xml version="1.0"?>
<project>
  <extend>${basedir}/../project.xml</extend>
  <name>Cargo Core Container API</name>
  <artifactId>cargo-core-api-container</artifactId>
  <package>org.codehaus.cargo.container</package>
  <shortDescription>Core API to start/stop/configure containers</shortDescription>
  <description>
    Core API to start/stop/configure containers
  </description>
  <repository>
    <connection>scm:svn:svn://svn.cargo.codehaus.org/cargo/scm/cargo/trunk/core/api/container</connection>
    <url>http://svn.cargo.codehaus.org/</url> 
  </repository>
 
  <packageGroups>
    <packageGroup>
      <title>Public API</title>
      <packages>org.codehaus.cargo.container,org.codehaus.cargo.container.deployable,org.codehaus.cargo.container.deployer,org.codehaus.cargo.container.resin,org.codehaus.cargo.container.orion,org.codehaus.cargo.container.jetty,org.codehaus.cargo.container.property,org.codehaus.cargo.container.installer,org.codehaus.cargo.container.weblogic,org.codehaus.cargo.container.configuration,org.codehaus.cargo.container.jo</packages>
    </packageGroup>
    <packageGroup>
      <title>Public SPI</title>
      <packages>org.codehaus.cargo.container.spi</packages>
    </packageGroup>
    <packageGroup>
      <title>Internal API</title>
      <packages>org.codehaus.cargo.container.internal.util,org.codehaus.cargo.container.internal.resin,org.codehaus.cargo.container.internal.orion,org.codehaus.cargo.container.internal,org.codehaus.cargo.container.internal.jetty,org.codehaus.cargo.container.internal.jo,org.codehaus.cargo.container.internal.weblogic</packages>
    </packageGroup>
  </packageGroups>  

  <dependencies>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-util</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-module</artifactId>
      <version>${pom.currentVersion}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-j2ee-deployment_1.1_spec</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>ant</groupId>
      <artifactId>ant</artifactId>
      <version>1.5.4</version>
    </dependency>
    <!-- Note: We should normally put the version in the version tag but unfortunately this
         doesn't work because it would mean we would have 2 artifacts with the same groupId,
         artifactId and type... -->
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>cargo-core-api-util-${pom.currentVersion}</artifactId>
      <version>tests</version>
    </dependency>
  </dependencies>

</project>
