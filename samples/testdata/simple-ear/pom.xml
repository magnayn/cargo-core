<?xml version="1.0" encoding="UTF-8"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cargo</groupId>
    <artifactId>cargo-samples-testdata</artifactId>
    <version>0.9-SNAPSHOT</version>
  </parent>
  <artifactId>simple-ear</artifactId>
  <name>Cargo Simple EAR test data for samples</name>
  <packaging>ear</packaging>
  <scm>
    <connection>scm:svn:svn://svn.codehaus.org/cargo/cargo/trunk/samples/testdata/simple-ear</connection>
    <url>http://svn.cargo.codehaus.org/</url> 
  </scm>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>simple-war</artifactId>
      <version>${version}</version>
      <type>war</type>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <modules>
            <webModule>
              <groupId>org.codehaus.cargo</groupId>
              <artifactId>simple-war</artifactId>
              <contextRoot>/simpleweb</contextRoot>
            </webModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
