<?xml version="1.0" encoding="UTF-8"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.codehaus.cargo</groupId>
    <artifactId>cargo-samples-testdata</artifactId>
    <version>0.9-SNAPSHOT</version>
  </parent>
  <artifactId>empty-ear</artifactId>
  <name>Cargo Empty EAR test data for samples</name>
  <packaging>ear</packaging>
  <scm>
    <connection>scm:svn:http://svn.codehaus.org/cargo/core/trunk/samples/testdata/empty-ear</connection>
    <developerConnection>scm:svn:https://svn.codehaus.org/cargo/core/trunk/samples/testdata/empty-ear</developerConnection>
    <url>http://svn.cargo.codehaus.org/cargo/core/trunk/samples/testdata/empty-ear</url>
  </scm>
  <dependencies>
    <dependency>
      <groupId>org.codehaus.cargo</groupId>
      <artifactId>empty-jar</artifactId>
      <version>${version}</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <modules>
            <javaModule>
              <groupId>org.codehaus.cargo</groupId>
              <artifactId>empty-jar</artifactId>
            </javaModule>
          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
